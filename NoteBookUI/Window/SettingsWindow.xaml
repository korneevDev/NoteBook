<Window x:Class="NoteBookUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Settings}" Height="200" Width="300">
    <StackPanel>
        <TextBlock Text="{DynamicResource SelectLanguage}" />
        <ComboBox x:Name="LanguageComboBox">
            <ComboBoxItem Content="English" Tag="en-US" />
            <ComboBoxItem Content="Русский" Tag="ru-RU" />
        </ComboBox>
        <Button Content="{DynamicResource Apply}" Click="ApplyButton_Click"/>
    </StackPanel>

</Window>